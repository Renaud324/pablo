<div class="modal fade" id="updateStatusModal<%= job_application.id %>">
  <div class="modal-dialog" role="document">
    <div class="modal-content" style="background-color: #262525;">
      <div class="modal-header">
        <h5 class="modal-title" id="statusUpdateModalLabel">Update status</h5>
        <button type="button" style="color:white"class="btn-close align-self-start" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <h4 class="text-center mb-4"><%= job_application.job_title %> - <%= job_application.company.name %></h4> <!-- Company name centered and spaced -->
        <%= form_with(model: job_application, url: update_status_job_application_path(job_application), local: true, method: :patch) do |form| %>
          <div class="form-group mb-4"> <!-- Added margin-bottom for spacing -->
            <%= form.label :status, 'Status' %>
            <%= form.select :status, JobApplication.statuses.keys.map { |key| [key.humanize, key] }, {}, { class: 'form-control custom-select' } %>
          </div>
          <%= form.submit "Update Status", class: "btn btn-flat w-100 mt-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
