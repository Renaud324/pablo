<div class="container mb-2" data-bs-toggle="modal" data-search-bar-target="tasks">

  <%# ------------- // TASKS CARDS // ------- %>
  <div style="max-height: 380px; overflow-y: scroll;" class="p-1">
    <div class="d-flex flex-column mb-3 card-task">
      <% if current_user.present? && @tasks.present? %>
        <% @tasks.each do |task| %>
          <div class="d-flex align-items-center custom-checkbox card-task-ui" style="position: relative;">
            <input class="custom-checkbox" type="checkbox" id="task_<%= task.id %>" name="task_<%= task.id %>" style="transform: scale(1.5);"/>
            <div class="d-flex align-items-center">
              <label for="task_<%= task.id %>">
              </label>
              <div class="card-task">
                <p style="font-size: 16px; font-weight: bold;"><span style="color: #9796f0;"><%= task.name %></span></p>
                <p style="font-size: 14px; margin-top: -15px"><span style="color: $white;"><%= task.job_application.job_title %> @<%= task.job_application.company.name %></span>
                <p style="margin-top: -15px; font-size: 12px; color: #7E7E7E;"><%= task.description %></p>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <%# Introduce an image if there are no tasks %>
        <%# <img src="https://res.cloudinary.com/dkr1l2a2k/image/upload/v1710413417/No_events_dsnq0y.png" alt="No tasks available" style="width: 100%; max-height: 200px;"> %>
        <p class="quote">No tasks for today.</p>
      <% end %>
    </div>
  </div>
</div>
