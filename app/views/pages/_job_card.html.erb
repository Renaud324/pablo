<div class="job-card">
  <div class="d-flex justify-content-between me-2">
    <h5 style="font-size: 14px; color: #555555;"><%= job_application.job_title %></h5>
    <i class="fa-solid fa-pen-to-square" style="color: #555555; font-size: 14px;"></i>
  </div>
  <div class="d-flex">
    <p style="font-size: 12px"><i class="fa-solid fa-building" style="margin-right: 8px; font-size: 12px" ></i><%= job_application.company.name %></p>
    <p style="font-size: 12px"><i class="fa-solid fa-location-dot" style="margin-left: 10px; margin-right: 8px; font-size: 12px"></i><%= job_application.job_location %></p>
  </div>
</div>
