<%= link_to job_application_path(job_application), class: "text-decoration-none" do %>
  <div class="job-card" style="position: relative;" data-id=<%= job_application.id %>>
    <div class="d-flex justify-content-between me-2 align-items-center">
      <h5 style="font-size: 14px; color: #171637;" ><%= job_application.job_title %></h5>
    </div>
    <div class="d-flex">
      <p style="font-size: 12px; color: #f7F7F7;"><i class="fa-solid fa-building" style="margin-right: 8px; font-size: 12px" ></i><%= job_application.company.name %></p>
      <p style="font-size: 12px; color: #f7F7F7;"><i class="fa-solid fa-location-dot" style="margin-left: 10px; margin-right: 8px; font-size: 12px"></i><%= job_application.job_location %></p>
    </div>
  </div>
<% end %>
