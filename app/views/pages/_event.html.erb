<div class='upcoming' style="height: 210px; overflow-y: scroll;">
  <!-- Ajouter une condition pour vérifier si la liste d'événements est vide -->
  <% if @upcoming_interactions.empty? %>
    <p class="quote text-align-center">No events at the moment</p>
    <%# <img src="https://res.cloudinary.com/dkr1l2a2k/image/upload/v1710413417/No_events_dsnq0y.png" alt="No upcoming events" style="width: 50%; margin-left: 70px; margin-right: 70px;"> %>
  <% else %>
    <div class="flexbox">
      <% @upcoming_interactions.each do |interaction| %>
        <div class="event-container">
          <div class="row ps-3 pe-3">
            <%= link_to "/interactions", class: "row ms-1 event-card" do %>
              <div class="col-2">
                <div class="img-div">
                  <% if interaction.interaction_type == "Phonecall" %>
                    <i class="fa-solid fa-phone"></i>
                  <% elsif interaction.interaction_type == "Videocall" %>
                    <i class="fa-solid fa-video"></i>
                  <% elsif interaction.interaction_type == "Face-to-face" %>
                    <i class="fa-solid fa-map-marker-alt"></i>
                  <% else %>
                    <i class="fa-solid fa-map-marker-alt"></i>
                  <% end %>
                </div>
              </div>
              <div class="col-6">
                <h3><%= interaction.headline %></h3>
                <p><%= interaction.event_date.strftime('%b %d, %A') %></p>
              </div>
              <div class="col-4">
                <h3><%= interaction.event_time.strftime('%I:%M %p') %></h3>
                <p><%= interaction.location %></p>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
