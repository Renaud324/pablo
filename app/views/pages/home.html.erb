

<div class="main-content">
  <div class="row justify-content-between ms-5 me-2">


<%# // -------- PIPELINE ------------ // %>
    <div class="col-md-8 mt-3 row justify-content-around mt-2">
      <div class="col-md-3 square-column text-center">
        <div class="gradient-container pt-1">
          <i class="fa-regular fa-paper-plane"></i>
          <p><strong>Just Applied</strong></p>
          <p class="gradient-text" style="font-weight: bold; font-size: 30px; margin-top: -12px;"><%= @just_applied_applications.count %></p>
        </div>
      </div>
      <div class="col-md-3 square-column text-center">
        <div class="gradient-container pt-1">
          <i class="fa-regular fa-comments"></i>
          <p><strong>1st interview</strong></p>
          <p class="gradient-text" style="font-weight: bold; font-size: 30px; margin-top: -12px;"><%= @first_interview_applications.count %></p>
        </div>
      </div>
      <div class="col-md-3 square-column text-center">
        <div class="gradient-container pt-1">
          <i class="fa-solid fa-gears"></i>
          <p><strong>Advanced</strong></p>
          <p class="gradient-text" style="font-weight: bold; font-size: 30px; margin-top: -12px;"><%= @advanced_process_applications.count %></p>
        </div>
      </div>
      <div class="col-md-3 square-column text-center">
        <div class="gradient-container-offer pt-1">
          <i class="fa-solid fa-trophy" style="font-size: 20px;"></i>
          <p><strong>Offer</strong></p>
          <p style="font-weight: bold; font-size: 30px; margin-top: -12px;"><%= @offer_applications.count %></p>
        </div>
      </div>

      <div class="mt-4 container-colored">
        <div class="d-flex justify-content-end">
          <%# <h5 class="mt-3" style="padding: 10px;">My job applications</h5> %>
          <%= link_to refresh_job_applications_path, data: { turbo_method: :post }, class: "btn btn-task", style: "" do %>
          <i class="fa-solid fa-arrows-rotate"></i> Refresh
          <% end %>
        </div>
        <div class="ms-2">
          <%= render "job_applications/pipeline" %>
        </div>
      </div>
    </div>
    <div class="col-md-4 mt-3 sideright">
      <div class="mb-5">
        <h5 class="mt-6" style="padding: 10px;">Upcoming events</h5>
        <%= render "pages/event" %>
      </div>
      <hr>
      <div >
        <div class="d-flex justify-content-between align-items-center">
          <h5 class="mt-6" style="padding: 10px;">Today's tasks</h5>
          <button type="button" class="btn btn-add-task" data-bs-toggle="modal" data-bs-target="#newTaskModal">
            <i class="fa-solid fa-circle-plus me-2" style="font-size: 14px;"></i> <span style="font-size: 14px;">Add a task</span>
          </button>
          <%= render 'shared/new_tasks', task: @task %>
        </div>
        <%= render "shared/tasks" %>
      </div>
    </div>
  </div>
</div>
