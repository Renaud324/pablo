

<div class="container-application main-content">
  <div class="row justify-content-between ms-5 me-2">


<%# // -------- PIPELINE ------------ // %>
    <div class="col-md-8 mt-3 row justify-content-around">
      <div class="col-md-3 square-column text-center">
        <i class="fa-regular fa-paper-plane"></i>
        <p><strong>Just Applied</strong></p>
        <p class="gradient-text" style="font-weight: bold; font-size: 30px; margin-top: -12px;">12</p>
      </div>
      <div class="col-md-3 square-column text-center">
        <i class="fa-regular fa-comments"></i>
        <p><strong>1st interview</strong></p>
        <p class="gradient-text" style="font-weight: bold; font-size: 30px; margin-top: -12px;">7</p>
      </div>
      <div class="col-md-3 square-column text-center">
        <i class="fa-solid fa-gears"></i>
        <p><strong>Advanced</strong></p>
        <p class="gradient-text" style="font-weight: bold; font-size: 30px; margin-top: -12px;">3</p>
      </div>
      <div class="col-md-3 square-column text-center">
        <i class="fa-solid fa-trophy"></i>
        <p><strong>Offer</strong></p>
        <p class="gradient-text" style="font-weight: bold; font-size: 30px; margin-top: -12px;">1</p>
      </div>
      <div class="mt-2 container-colored">
        <h4 class="mt-3" style="padding: 10px;">My applications</h4>
        <div class="ms-2">
          <%= render "job_applications/pipeline" %>
        </div>
      </div>
    </div>

    <div class="col-md-4 container-colored mt-3">
      <div class="mb-5">
        <h4 class="mt-6" style="padding: 10px;">Upcoming events</h4>
        <%= render "pages/event" %>
      </div>
      <hr>
      <div >
        <div class="d-flex justify-content-between align-items-center">
          <h4 class="mt-6" style="padding: 10px;">Today's tasks</h4>
          <button type="button" class="btn btn-add-task" data-bs-toggle="modal" data-bs-target="#newTaskModal">
            <i class="fa-solid fa-circle-plus me-2" style="font-size: 14px;"></i> <span style="font-size: 14px;">Add a task</span>
          </button>
        </div>
        <%= render "shared/tasks" %>
      </div>
    </div>
  </div>
</div>
