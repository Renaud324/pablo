

<div class="main-content">
  <div class="justify-content-between ms-5 row">


<%# // -------- PIPELINE ------------ // %>
    <div class="col-md-8 mt-3 row justify-content-around mt-2" data-controller="dragndrop">
      <div class="col-md-3 square-column text-center">
        <div class="gradient-container pt-1">
          <i class="fa-regular fa-paper-plane"></i>
          <p><strong>Just Applied</strong></p>
          <p class="gradient-text" style="font-weight: bold; font-size: 30px; margin-top: -12px;" data-dragndrop-target="count" data-id="0"><%= @just_applied_applications.count %></p>
        </div>
      </div>
      <div class="col-md-3 square-column text-center">
        <div class="gradient-container pt-1">
          <i class="fa-regular fa-comments"></i>
          <p><strong>1st interview</strong></p>
          <p class="gradient-text" style="font-weight: bold; font-size: 30px; margin-top: -12px;" data-dragndrop-target="count" data-id="1"><%= @first_interview_applications.count %></p>
        </div>
      </div>
      <div class="col-md-3 square-column text-center">
        <div class="gradient-container pt-1">
          <i class="fa-solid fa-gears"></i>
          <p><strong>Advanced</strong></p>
          <p class="gradient-text" style="font-weight: bold; font-size: 30px; margin-top: -12px;" data-dragndrop-target="count" data-id="2"><%= @advanced_process_applications.count %></p>
        </div>
      </div>
      <div class="col-md-3 square-column text-center">
        <div class="gradient-container-offer pt-1">
          <i class="fa-solid fa-trophy" style="font-size: 20px;"></i>
          <p><strong>Offer</strong></p>
          <p style="font-weight: bold; font-size: 30px; margin-top: -12px;" data-dragndrop-target="count" data-id="3"><%= @offer_applications.count %></p>
          <img class="foxi" src="https://res.cloudinary.com/dkr1l2a2k/image/upload/v1710241646/output-onlinegiftools_1_aprppf.gif" alt="">
        </div>
      </div>

      <div class="mt-4 container-colored" style="height: 590px;">
        <div class="d-flex justify-content-end mt-2">
          <%= link_to refresh_job_applications_path, data: { turbo_method: :post }, class: "btn btn-task", style: "" do %>
          <i class="fa-solid fa-arrows-rotate"></i> Refresh
          <% end %>
         <%= link_to generate_tasks_path, data: { turbo_method: :post }, class: 'btn btn-task' do %>
            <i class="fa-solid fa-robot"> </i> AI Task
          <% end %>
        </div>

        <div>

        <div>
          <%= render "job_applications/pipeline" %>
        </div>
      </div>
    </div>
    <div class="col-md-4 mt-3 sideright">
      <div class="mb-3">
        <h5 class="mt-6" style="padding: 10px;">Upcoming events</h5>
        <%= render "pages/event" %>
      </div>
      <hr class="mb-3">
      <div >
        <div class="d-flex justify-content-between align-items-center mb-2">
          <h5 class="mt-6" style="padding: 10px;">Today's tasks</h5>
          <button type="button" class="btn edition-button p-2" data-bs-toggle="modal" data-bs-target="#newTaskModal">
            <i class="fa-solid fa-circle-plus" style="font-size: 16px;"></i> <span style="font-size: 15px; font-weight: bold;">Create a task</span>
          </button>
          <%= render 'shared/new_tasks', task: @task %>
        </div>
        <%= render "shared/tasks" %>
      </div>
    </div>
  </div>
</div>
