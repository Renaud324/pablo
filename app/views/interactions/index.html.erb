<%# Assuming Rails automatically requires necessary libraries %>


<div class='upcoming'>
  <h1>Upcoming events</h1>
  <div class="flexbox">
    <% @interactions.each do |interaction| %>
      <div class="container">
        <div class="row">
          <div class="col-2">
            <div class="img-div">
              <% if interaction.interaction_type == "phone" %>
                <i class="fa-solid fa-phone"></i>
              <% elsif interaction.interaction_type == "videocall" %>
                <i class="fa-solid fa-video"></i>
              <% elsif interaction.interaction_type == "f2f" %>
                <i class="fa-solid fa-map-marker-alt"></i>
              <% else %>
                <i class="fa-solid fa-map-marker-alt"></i>
              <% end %>
            </div>
          </div>
          <div class="col-7">
            <h3><%= interaction.headline %></h3>
            <p><%= interaction.event_date.strftime('%b %d, %A') %></p>
          </div>
          <div class="col-3">
            <h3><%= interaction.event_time.strftime('%I:%M %p') %></h3>
            <p><%= interaction.location %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>





