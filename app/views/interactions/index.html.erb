<div class="container-calendar">
  <h1>Interactions</h1>

  <%= month_calendar(attribute: :event_date, events: @interactions) do |date, interactions| %>
    <div>
      <div class="<%= 'red-circle' if date == Date.today %>">
        <%= date.day %>
      </div>
      <% interactions.each do |interaction| %>
        <div class="flexbox">
          <%= interaction.headline %>
        </div>
      <% end %>
    </div>
  <% end %>

