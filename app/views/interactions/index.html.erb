<div class="main-content">

<div class="container-calendar">



  <h1>Events</h1>

  <!-- Button to add a new interaction -->
  <div class="pb-5 d-flex flex-row-reverse">
    <button type="button" class="btn btn-task" data-bs-toggle="modal" data-bs-target="#newInteractionModal">
      <i class="fa-solid fa-circle-plus"></i> Add an interaction
    </button>
  </div>

  <!-- Modal to add a new interaction -->
  <%= render 'interactions/new_interaction', interaction: @interaction %>


  <!-- Create calendar -->
  <%= month_calendar(attribute: :event_date, events: @interactions) do |date, interactions| %>
    <div>
      <div class="<%= 'red-circle' if date == Date.today %>">
        <%= date.day %>
      </div>
      <% interactions.each do |interaction| %>
        <div class="flexbox">
          <!-- Modal button for each event -->
          <button type="button" class="btn btn-primary button-modal" data-bs-toggle="modal" data-bs-target="#modal<%= interaction.id %>"><%= interaction.headline %></button>
          <!-- Modal -->
          <div class="modal fade" id="modal<%= interaction.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="exampleModalLabel"><%= interaction.headline %></h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <div class="container">
                    <div class="row">
                      <div class="col-4">
                        <i class="fa-solid fa-house"></i><p style="display: inline";>    Event type<p>
                      </div>
                      <div class="col-8">
                        <p><%= interaction.interaction_type %></p>
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-4">
                        <i class="fa-regular fa-calendar"></i><p style="display: inline";>    Event date<p>
                      </div>
                      <div class="col-8">
                        <p><%= Date.parse(interaction.event_date.to_s).strftime("%B %d, %Y")  %><p>
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-4">
                        <i class="fa-regular fa-clock"></i><p style="display: inline";>    Event time<p>
                      </div>
                      <div class="col-8">
                        <p><%= DateTime.parse(interaction.event_time.to_s).strftime("%l:%M %p").strip %><p>
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-4">
                        <i class="fa-solid fa-map-marker-alt"></i><p style="display: inline";>    Location<p>
                      </div>
                      <div class="col-8">
                        <p><%= interaction.location %><p>
                      </div>
                    </div>






                  </div>




                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <%# <button type="button" class="btn btn-primary">Save changes</button> %>
                </div>
              </div>
            </div>
          </div>
        <!-- Modal end -->
        </div>
      <% end %>
    </div>
  <% end %>
</div>


<script>
      function closeModal() {
        var modal = document.getElementById('newInteractionModal');
        if (modal) {
            modal.classList.remove('show');
            modal.setAttribute('aria-hidden', 'true');
            modal.style.display = 'none';
            var modalBackdrop = document.getElementsByClassName('modal-backdrop')[0];
            if (modalBackdrop) {
                modalBackdrop.remove();
            }
        }
    }
</script>

<%# Assuming Rails automatically requires necessary libraries %>
<div class='upcoming'>
  <h1>Upcoming events</h1>
  <div class="flexbox">
    <% @interactions.each do |interaction| %>
      <div class="container">
        <div class="row">
          <div class="col-2">
            <div class="img-div">
              <% if interaction.interaction_type == "phone" %>
                <i class="fa-solid fa-phone"></i>
              <% elsif interaction.interaction_type == "videocall" %>
                <i class="fa-solid fa-video"></i>
              <% elsif interaction.interaction_type == "f2f" %>
                <i class="fa-solid fa-map-marker-alt"></i>
              <% else %>
                <i class="fa-solid fa-map-marker-alt"></i>
              <% end %>
            </div>
          </div>
          <div class="col-7">
            <h3><%= interaction.headline %></h3>
            <p><%= interaction.event_date.strftime('%b %d, %A') %></p>
          </div>
          <div class="col-3">
            <h3><%= interaction.event_time.strftime('%I:%M %p') %></h3>
            <p><%= interaction.location %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



</div>
</div>
