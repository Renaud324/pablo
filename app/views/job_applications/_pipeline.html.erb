<div class="ms-2">
 <div class="container" data-search-bar-target="list">
    <div class="d-flex">
      <i class="fa-solid fa-trophy me-2"></i>
      <h4 class="tab-underlined active" style="font-size: 16px">OFFER</h4>
    </div>
    <div class="column-content d-flex horizontal-scrolling">
      <% @offer_applications.each do |job_application| %>
        <%= render 'job_card', job_application: job_application %>
        <%= render 'shared/update_Job_application_status', job_application: job_application %>
      <% end %>
    </div>

    <div class="d-flex">
      <i class="fa-solid fa-gears me-2"></i>
      <h4 class="tab-underlined active" style="font-size: 16px">ADVANCED</h4>
    </div>

    <div class="column-content d-flex horizontal-scrolling">
      <% @advanced_process_applications.each do |job_application| %>
