<div class="container-background ">
  <div class="container-application">
    <div class="d-flex">
      <div class="p-2 w-100">
        <h1>Job Journey</h1>
        <h3><%= @job_application.job_title %></h3>
      </div>
      <div class="p-2 flex-shrink-0">
          <div>
            <p class="category-process">
            <i class="fa-solid fa-building"></i>
              Company name
            </p>
          </div>
          <div class="d-flex">
            <p class="m-3">
            <i class="fa-solid fa-location-dot m-2"></i><%= @job_application.job_location %></p>
            <p class="m-3">
            <i class="fa-solid fa-sack-dollar m-2"></i><%= @job_application.salary %></p>
          </div>
        </div>
      </div>
  </div>
</div>


<%# // -------------TIMELINE--------------- // %>
  <div class="d-flex flex-column container-timeline">
    <div class="d-flex align-items-center justify-content-center timeline" style="padding-bottom: 45px;">
      <div style="width: 11%;"></div>
      <div class="icone-sent my-1">
      </div>
      <div class="white-line"></div>
      <div class="icone-interview my-1"></div>
      <div class="white-line"></div>
      <div class="icone-advanced my-1"></div>
      <div class="white-line"></div>
      <div class="icone-offer my-1"></div>
      <div style="width: 11%;"></div>
    </div>
    <div class="d-flex align-items-center justify-content-center" style="margin-top: -40px;">
        <div class="timeline-item">
          <div class="timeline-item-content">
            <h3>STEP 1</h3>
            <h3><strong>Just applied</strong></h3>
            <span class="timeline-item-date">01/01/2023</span>
          </div>
        </div>
        <div class="timeline-item">
          <div class="timeline-item-content">
            <h3 class="border-active-process">STEP 2</h3>
            <h3><strong>1st interview</strong></h3>
            <span class="timeline-item-date">01/01/2023</span>
          </div>
        </div>
        <div class="timeline-item">
          <div class="timeline-item-content">
            <h3>STEP 3</h3>
            <h3><strong>Advanced process</strong></h3>
            <span class="timeline-item-date">01/01/2023</span>
          </div>
        </div>
        <div class="timeline-item">
          <div class="timeline-item-content">
            <h3>STEP 4</h3>
            <h3><strong>Offer</strong></h3>
            <span class="timeline-item-date">01/01/2023</span>
          </div>
        </div>
    </div>
  </div>




<%# // ----------------- COLONNES ðŸ’– ------------- // %>

    <div class="container-application">
      <div class="row">
        <div class="col-md-9">
            <ul class="list-inline tabs-underlined">
              <li class="d-flex flex-column align-items-center">
                <div>
                  <i class="fa-solid fa-file-invoice"></i>
                </div>
                <div>
                  <a href="#" class="tab-underlined active">Job description</a>
                </div>
              </li>
              <li class="d-flex flex-column align-items-center">
                <div>
                  <i class="fa-regular fa-comment-dots"></i>
                </div>
                <div>
                  <a href="#" class="tab-underlined">My past interactions</a>
                </div>
              </li>
              <li class="d-flex flex-column align-items-center">
                <div>
                  <i class="fa-solid fa-pencil"></i>
                </div>
                <div>
                  <a href="#" class="tab-underlined">My notes</a>
                </div>

              </li>
              </div>
            </ul>
        <div class="col-md-3">
          <div class="d-flex">
            <div>
              <p class="category-tag">
              <i class="fa-solid fa-magnifying-glass-location"></i>
                # <%= @job_application.application_source %>
              </p>
              <a class="category-tag">
              <i class="fa-solid fa-paperclip"></i>
              <%= @job_application.offer_link %>
              </a>
            </div>
          </div>

          <div class="mt-5">
            <h4>Contact</h4>
            <div class="d-flex mb-3" style="align-items: center;">
            <div class="p-3">
              <img src="https://cdn-icons-png.flaticon.com/128/1177/1177568.png" alt="Avatar contact" class="contact-card-img">
            </div>
              <div class="p-3">
                <p class="padding-card card-task-title d-flex">First Name - Name</p>
                <p class="padding-card">Job Title</p>
                <i class="fa-solid fa-phone contact-card-i"></i>
                <i class="fa-solid fa-envelope contact-card-i"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>



<%# // ------------------ JOB DESCRIPTION ---------------- // %>
  <div class="m-5" style="height: 300px;">
    <p><%= @job_application.job_description %></p>
  </div>
<%# // ------------------ INTERACTIONS ---------------- // %>
  <div class="m-5" style="height: 300px;">
    <div>
      <button name="button" type="submit" class="btn">
        <i class="fa-solid fa-circle-plus btn-text"></i> Add an interaction
      </button>
      <div class="d-flex mb-3 card-task" style="align-items: center;">
      <div class="icon-task p-3">
        <i class="fa-solid fa-envelope"></i>
      </div>
        <div class="p-3">
          <p class="padding-card card-task-title d-flex">Date - Contacts</p>
          <p class="padding-card">Content</p>
        </div>
        </div>
    </div>
  </div>
<%# // ------------------ NOTES ---------------- // %>
  <div class="m-5" style="height: 300px;">
    <div>
      <button name="button" type="submit" class="btn">
        <i class="fa-solid fa-circle-plus btn-text"></i> Add a note
      </button>
      <div class="d-flex mb-3 card-task" style="align-items: center;">
      <div class="icon-task p-3">
        <i class="fa-regular fa-note-sticky"></i>
      </div>
        <div class="p-3">
          <p class="padding-card card-task-title d-flex">Title - Date</p>
          <p class="padding-card">Content</p>
        </div>
        </div>
    </div>
  </div>


