<%= simple_form_for job_application, html: { id: 'notes-form', data: { action: 'submit->notes-form#submit' } } do |form| %>
  <%= form.input :notes, label: false, as: :text, input_html: { rows: 10, id: "notes-area", style: "margin-top: 1rem;" } %>
  <%= form.button :submit, 'Save Notes', class: 'btn-flat', data: { disable_with: 'Saving...' } %>
<% end %>
