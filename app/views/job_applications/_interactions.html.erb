<div class="modal fade" id="newInteractionModal" data-interaction-target="modal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newInteractionModalLabel">New Interaction</h5>
        <button type="button" class="close" data-action="click->interaction#closeModal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="modal">
        <%= render 'interactions/form', interaction: @interaction %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="sendEmail" data-interaction-target="modal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="sendEmaillLabel">New Interaction</h5>
        <button type="button" class="close" data-action="click->interaction#closeModal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="modal">
        <%= render 'interactions/email', interaction: @interaction %>
      </div>
    </div>
  </div>
</div>


<div class="m-5">
  <div class="row">
    <div class="col">
      <div class="mb-3 card-task" style="align-items: center; padding-bottom: 15px">
        <!-- Interaction cards go here -->
      </div>
    </div>
    <div class="col d-flex justify-content-center align-items-center flex-column"> <!-- Adjusted this line -->
      <div class="pb-5">
        <button type="button" class="btn btn-flat" data-bs-toggle="modal" data-bs-target="#newInteractionModal">
          <i class="fa-solid fa-circle-plus"></i> Add an interaction
        </button>
      </div>
      <div> <!-- Removed pt-3 and adjusted to a regular div for consistent spacing -->
        <button type="button" class="btn btn-flat" data-bs-toggle="modal" data-bs-target="#sendEmail">
          <i class="fa-regular fa-envelope"></i> Send an email
        </button>
      </div>
    </div>
  </div>
</div>
