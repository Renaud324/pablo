
<div class="container">
  <div class="tabs-underlined" style="width:1000px">
    <div class="column">
      <h4 class="tab-underlined active text-center">Just Applied</h4>
      <div class="column-content">
      <% @just_applied_applications.each do |job_application| %>
        <%= link_to job_application_path(job_application), class: "text-decoration-none" do %>
          <%= render 'job_card', job_application: job_application %>
        <% end %>
      <% end %>
    </div>
  </div>

  <%= button_to 'Refresh Job Applications', refresh_job_applications_path, method: :post, class: "btn btn-primary" %>



